pipeline {
    agent {
        node {
            label 'docker-agent-python'
        }
    }
    
    triggers {
        pollSCM 'H/5 * * * *'
    }

    stages {
        stage('Build') {
            steps {
                dir('my-app') {
                    echo 'Building...'
                    sh """
                        python -V
                        pip list
                        python -m venv venv
                        . ./.venv/bin/activate
                        pip install -r requirements.txt
                        pip list
                    """
                }
            }
        }

        stage('Test') {
            steps {
                dir('my-app') {
                echo 'Testing...'
                    sh """
                        python hello.py
                        python hello.py --name=Alice
                    """
                }
            }
        }

        stage('Deliver') {
            steps {
                echo 'Delivering...'
                sh """
                    echo 'Doing deliver stuff...'
                """
            }
        }
    }
}
